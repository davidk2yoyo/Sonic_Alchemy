# Database Configuration
POSTGRES_DB=voicecanvas
POSTGRES_USER=voicecanvas
POSTGRES_PASSWORD=voicecanvas_dev_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
# DATABASE_URL will be auto-generated if not provided

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600

# MinIO/S3 Storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_AUDIO=audio
MINIO_BUCKET_IMAGES=images
MINIO_USE_SSL=false

# Gemini API (REQUIRED - Get your key from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_VISION=gemini-2.5-flash
GEMINI_MODEL_AUDIO=gemini-2.5-flash
GEMINI_MODEL_TEXT=gemini-2.5-flash
GEMINI_RATE_LIMIT=60
GEMINI_CACHE_ENABLED=true

# Security
SECRET_KEY=dev_secret_key_change_in_production_use_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
ENVIRONMENT=development
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3010
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# File Upload Limits
MAX_UPLOAD_SIZE_MB=50
MAX_AUDIO_DURATION_SECONDS=300
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,ogg
